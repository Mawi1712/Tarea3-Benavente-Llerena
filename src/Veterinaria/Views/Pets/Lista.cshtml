@model IEnumerable<Veterinaria.Models.Pet>
@{
    Layout = "/Views/_Layout.cshtml";
}
<h2>Lista de Mascotas</h2>
@if (TempData["msg"] != null) {
    <p><strong>@TempData["msg"]</strong></p>
}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Especie</th>
            <th>Edad</th>
            <th>Propietario</th>
            <th>Tel√©fono</th>
            <th>Observaciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var m in Model) {
        <tr>
            <td>@m.Id</td>
            <td>@m.Nombre</td>
            <td>@m.Especie</td>
            <td>@m.Edad</td>
            <td>@m.Propietario</td>
            <td>@m.Telefono</td>
            <td>@m.Observaciones</td>
        </tr>
    }
    </tbody>
</table>
